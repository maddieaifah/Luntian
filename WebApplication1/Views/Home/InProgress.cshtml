@{
    ViewData["Title"] = "In Progress Reports";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LUNTIAN | In Progress Reports</title>
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/view.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
<div class="hamburger" onclick="toggleSidebar()">‚ò∞</div>
<div class="admin-container">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo-section">
            <img src="~/images/logo only luntian.png" class="logo-img" />
            <h2 class="logo-text">LUNTIAN</h2>
        </div>
        <nav>
            <a asp-action="Dashboard" asp-controller="Home"><i class="fas fa-chart-pie"></i> Dashboard</a>
            <a asp-action="VolunteerBoard" asp-controller="Home"><i class="fas fa-hand-holding-heart"></i> Volunteer Board</a>
            <a asp-action="AdminProfile" asp-controller="Home"><i class="fas fa-user-cog"></i> Profile</a>
        </nav>
        <a asp-action="RoleSelection" asp-controller="Home" class="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-dashboard">
    <div class="reports-header">
        <h1 class="dashboard-title">In Progress Reports</h1>
        <button class="filter-toggle" onclick="toggleFilters()">üîç Filter</button>
    </div>

                <!-- Filter Controls -->
        <div class="filter-controls">
            <select id="priorityFilter" onchange="filterReports()">
                <option value="all">All Priorities</option>
                <option value="low">Low</option>
                <option value="moderate">Moderate</option>
                <option value="high">High</option>
                <option value="urgent">Urgent</option>
            </select>
            <select id="hazardFilter" onchange="filterReports()">
                <option value="all">All Hazards</option>
                <option value="non-hazardous">Non-Hazardous</option>
                <option value="mild">Mild</option>
                <option value="severe">Severe</option>
                <option value="life-threatening">Life-Threatening</option>
            </select>
            <select id="sortFilter" onchange="sortReports()">
                <option value="newest">Newest First</option>
                <option value="oldest">Oldest First</option>
                <option value="priority-high">Priority: High to Low</option>
                <option value="priority-low">Priority: Low to High</option>
            </select>
        </div>

        <div class="reports-feed" id="reportsFeed">

            <!-- Report 1 -->
            <div class="report-post" data-status="In Progress">
                <div class="post-left-border priority-border high"></div>
                <div class="report-body">
                    <div class="post-header">
                        <img src="https://ui-avatars.com/api/?name=Maria+Reyes" class="user-avatar" />
                        <div class="user-info">
                            <h3 class="user-name">Maria Reyes</h3>
                            <p class="user-location">Zone 2, Barangay 360</p>
                        </div>
                    </div>
                    <img src="~/images/garbage.png" alt="Flood Image" class="report-img" />
                    <div class="post-meta">
                        <span class="priority-label high">High</span>
                        <span class="hazard-label severe">Severe</span>
                        <span class="submitted-date">June 19, 2025</span>
                    </div>
                    <p class="report-description">Sidewalk near the school is flooded due to a blocked drain, causing students to walk on the road.</p>
                    <div class="post-footer">
                        <span class="status-label inprogress">In Progress</span>
                        <a asp-action="SolveIssue" asp-controller="Home" class="solve-btn">Solve</a>
                    </div>
                </div>
            </div>

            <!-- Report 2 -->
            <div class="report-post" data-status="In Progress">
                <div class="post-left-border priority-border moderate"></div>
                <div class="report-body">
                    <div class="post-header">
                        <img src="https://ui-avatars.com/api/?name=Luis+Gomez" class="user-avatar" />
                        <div class="user-info">
                            <h3 class="user-name">Luis Gomez</h3>
                            <p class="user-location">Zone 4, Barangay 360</p>
                        </div>
                    </div>
                    <img src="~/images/garbage.png" alt="Trash image" class="report-img" />
                    <div class="post-meta">
                        <span class="priority-label moderate">Moderate</span>
                        <span class="hazard-label mild">Mild</span>
                        <span class="submitted-date">June 21, 2025</span>
                    </div>
                    <p class="report-description">Trash pile has been left uncollected for days near the basketball court.</p>
                    <div class="post-footer">
                        <span class="status-label inprogress">In Progress</span>
                        <a asp-action="SolveIssue" asp-controller="Home" class="solve-btn">Solve</a>
                    </div>
                </div>
            </div>

            <!-- Report 3 -->
            <div class="report-post" data-status="In Progress">
                <div class="post-left-border priority-border urgent"></div>
                <div class="report-body">
                    <div class="post-header">
                        <img src="https://ui-avatars.com/api/?name=Ana+Lopez" class="user-avatar" />
                        <div class="user-info">
                            <h3 class="user-name">Ana Lopez</h3>
                            <p class="user-location">Zone 5, Barangay 360</p>
                        </div>
                    </div>
                    <img src="~/images/garbage.png" alt="Broken pole" class="report-img" />
                    <div class="post-meta">
                        <span class="priority-label urgent">Urgent</span>
                        <span class="hazard-label life-threatening">Life-Threatening</span>
                        <span class="submitted-date">June 22, 2025</span>
                    </div>
                    <p class="report-description">Broken electrical wire hanging dangerously near the sidewalk. Needs immediate attention.</p>
                    <div class="post-footer">
                        <span class="status-label inprogress">In Progress</span>
                        <a asp-action="SolveIssue" asp-controller="Home" class="solve-btn">Solve</a>
                    </div>
                </div>
            </div>

            <!-- Report 4 -->
            <div class="report-post" data-status="In Progress">
                <div class="post-left-border priority-border low"></div>
                <div class="report-body">
                    <div class="post-header">
                        <img src="https://ui-avatars.com/api/?name=Ella+Santos" class="user-avatar" />
                        <div class="user-info">
                            <h3 class="user-name">Ella Santos</h3>
                            <p class="user-location">Zone 6, Barangay 360</p>
                        </div>
                    </div>
                    <img src="~/images/garbage.png" alt="Clogged drain" class="report-img" />
                    <div class="post-meta">
                        <span class="priority-label low">Low</span>
                        <span class="hazard-label non-hazardous">Non-Hazardous</span>
                        <span class="submitted-date">June 23, 2025</span>
                    </div>
                    <p class="report-description">Leaves and debris clogged the sidewalk drain; needs simple cleaning.</p>
                    <div class="post-footer">
                        <span class="status-label inprogress">In Progress</span>
                        <a asp-action="SolveIssue" asp-controller="Home" class="solve-btn">Solve</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("active");
    }

    function toggleFilters() {
        const filters = document.querySelector(".filter-controls");
        filters.classList.toggle("visible");
    }

    function filterReports() {
        const priority = document.getElementById("priorityFilter").value;
        const hazard = document.getElementById("hazardFilter").value;
        const posts = document.querySelectorAll(".report-post");

        posts.forEach(post => {
            const matchPriority = priority === "all" || post.querySelector(".priority-label").classList.contains(priority);
            const matchHazard = hazard === "all" || post.querySelector(".hazard-label").classList.contains(hazard);
            post.style.display = matchPriority && matchHazard ? "flex" : "none";
        });
    }

    function sortReports() {
    const sortValue = document.getElementById("sortFilter").value;
    const feed = document.getElementById("reportsFeed");
    const posts = Array.from(feed.querySelectorAll(".report-post"));

    posts.sort((a, b) => {
        const dateA = new Date(a.querySelector(".submitted-date").textContent);
        const dateB = new Date(b.querySelector(".submitted-date").textContent);

        const priorityMap = {
            "low": 1,
            "moderate": 2,
            "high": 3,
            "urgent": 4
        };

        const priorityA = priorityMap[a.querySelector(".priority-label").classList[1]];
        const priorityB = priorityMap[b.querySelector(".priority-label").classList[1]];

        switch (sortValue) {
            case "newest":
                return dateB - dateA;
            case "oldest":
                return dateA - dateB;
            case "priority-high":
                return priorityB - priorityA;
            case "priority-low":
                return priorityA - priorityB;
            default:
                return 0;
        }
    });

    posts.forEach(post => feed.appendChild(post)); // Reorder in DOM
}

    // Close sidebar on mobile if clicked outside
    document.addEventListener("click", function (e) {
        const sidebar = document.getElementById("sidebar");
        const hamburger = document.querySelector(".hamburger");
        if (!sidebar.contains(e.target) && !hamburger.contains(e.target)) {
            sidebar.classList.remove("active");
        }
    });
</script>
<style>
        .solve-btn {
        padding: 8px 16px;
        background-color: #328d6e;
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 600;
        transition: background 0.2s ease;
    }

    .solve-btn:hover {
        background-color: #276c56;
    }
        .filter-controls {
        margin-top: 10px;
    }
</style>
</body>
</html>
