@{
    ViewData["Title"] = "Reports";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LUNTIAN | Reports</title>
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/view.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
<div class="hamburger" onclick="toggleSidebar()">‚ò∞</div>
<div class="admin-container">
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="logo-section">
            <img src="~/images/logo only luntian.png" class="logo-img" />
            <h2 class="logo-text">LUNTIAN</h2>
        </div>
        <nav>
            <a asp-action="Dashboard" asp-controller="Home"><i class="fas fa-chart-pie"></i> Dashboard</a>
            <a asp-action="VolunteerBoard" asp-controller="Home"><i class="fas fa-hand-holding-heart"></i> Volunteer Board</a>
            <a asp-action="AdminProfile" asp-controller="Home"><i class="fas fa-user-cog"></i> Profile</a>
        </nav>
        <a asp-action="RoleSelection" asp-controller="Home" class="logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-dashboard">
            <div class="reports-header">
                <h1 class="dashboard-title">Reports Feed</h1>
                <button class="filter-toggle" onclick="toggleFilters()">üîç Filter</button>
            </div>

<div class="filter-controls">
    <select id="priorityFilter" onchange="filterReports()">
        <option value="all">All Priorities</option>
        <option value="low">Low</option>
        <option value="moderate">Moderate</option>
        <option value="high">High</option>
        <option value="urgent">Urgent</option>
    </select>
    <select id="hazardFilter" onchange="filterReports()">
        <option value="all">All Hazards</option>
        <option value="non-hazardous">Non-Hazardous</option>
        <option value="mild">Mild</option>
        <option value="severe">Severe</option>
        <option value="life-threatening">Life-Threatening</option>
    </select>
    <select id="sortFilter" onchange="sortReports()">
        <option value="newest">Newest First</option>
        <option value="oldest">Oldest First</option>
        <option value="priority-high">Priority: High to Low</option>
        <option value="priority-low">Priority: Low to High</option>
    </select>
</div>

        <div class="reports-feed" id="reportsFeed">
            <!-- Repeatable Post -->
<div class="report-post" data-status="Pending" data-priority="Low" data-hazard="Moderate">
    <div class="post-left-border priority-border low"></div>
    <div class="report-body">
        <div class="post-header">
            <img src="https://ui-avatars.com/api/?name=Juan+Dela+Cruz" class="user-avatar" />
            <div class="user-info">
                <h3 class="user-name">Juan Dela Cruz</h3>
                <p class="user-location">Zone 1, Barangay 360</p>
            </div>
        </div>

        <img src="~/images/garbage.png" alt="Report Image" class="report-img" />

        <div class="post-meta">
            <span class="priority-label low">Low</span>
            <span class="hazard-label moderate">Moderate</span>
            <span class="submitted-date">June 20, 2025</span>
        </div>

        <p class="report-description">Overflowing garbage was reported in Zone 1 near the public market. It's beginning to attract pests.</p>

        <div class="post-footer">
            <span class="status-label pending">Pending</span>
            <select class="edit-status" onchange="updateStatus(this)">
                <option selected>Pending</option>
                <option>In Progress</option>
                <option>Resolved</option>
            </select>
            <button class="delete-btn">Delete</button>
        </div>
    </div>
</div>

<div class="report-post" data-status="In Progress" data-priority="High" data-hazard="Severe">
    <div class="post-left-border priority-border high"></div>
    <div class="report-body">
        <div class="post-header">
            <img src="https://ui-avatars.com/api/?name=Maria+Reyes" class="user-avatar" />
            <div class="user-info">
                <h3 class="user-name">Maria Reyes</h3>
                <p class="user-location">Zone 2, Barangay 360</p>
            </div>
        </div>

        <img src="~/images/blocked.jpg" alt="Flood Image" class="report-img" />

        <div class="post-meta">
            <span class="priority-label high">High</span>
            <span class="hazard-label severe">Severe</span>
            <span class="submitted-date">June 19, 2025</span>
        </div>

        <p class="report-description">Sidewalk near the school is flooded due to a blocked drain, causing students to walk on the road.</p>

        <div class="post-footer">
            <span class="status-label inprogress">In Progress</span>
            <select class="edit-status" onchange="updateStatus(this)">
                <option>Pending</option>
                <option selected>In Progress</option>
                <option>Resolved</option>
            </select>
            <button class="delete-btn">Delete</button>
        </div>
    </div>
</div>

<div class="report-post" data-status="Resolved" data-priority="Urgent" data-hazard="Life-Threatening">
    <div class="post-left-border priority-border urgent"></div>
    <div class="report-body">
        <div class="post-header">
            <img src="https://ui-avatars.com/api/?name=Jose+Santos" class="user-avatar" />
            <div class="user-info">
                <h3 class="user-name">Jose Santos</h3>
                <p class="user-location">Zone 3, Barangay 360</p>
            </div>
        </div>

        <img src="~/images/post.jpg" alt="Electric Post" class="report-img" />

        <div class="post-meta">
            <span class="priority-label urgent">Urgent</span>
            <span class="hazard-label life-threatening">Life-Threatening</span>
            <span class="submitted-date">June 18, 2025</span>
        </div>

        <p class="report-description">A broken electric post was leaning dangerously and has now been repaired. Thank you to the quick responders.</p>

        <div class="post-footer">
            <span class="status-label resolved">Resolved</span>
            <select class="edit-status" onchange="updateStatus(this)">
                <option>Pending</option>
                <option>In Progress</option>
                <option selected>Resolved</option>
            </select>
            <button class="delete-btn">Delete</button>
        </div>
    </div>
</div>

            <!-- You can duplicate more posts like this -->
        </div>
    </div>
</div>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("active");
    }

    // Close sidebar if clicked outside (mobile)
    document.addEventListener("click", function (e) {
        const sidebar = document.getElementById("sidebar");
        const hamburger = document.querySelector(".hamburger");
        if (!sidebar.contains(e.target) && !hamburger.contains(e.target)) {
            sidebar.classList.remove("active");
        }
    });

    function updateStatus(select) {
        const label = select.closest('.report-body').querySelector(".status-label");
        const value = select.value;
        label.textContent = value;
        label.className = `status-label ${value.toLowerCase().replace(/\s/g, '')}`;
    }

    function toggleFilters() {
        const filters = document.querySelector(".filter-controls");
        filters.classList.toggle("visible");
    }

    function filterReports() {
        const priority = document.getElementById("priorityFilter").value.toLowerCase();
        const hazard = document.getElementById("hazardFilter").value.toLowerCase();
        const posts = document.querySelectorAll(".report-post");

        posts.forEach(post => {
            const postPriority = (post.dataset.priority || "").toLowerCase();
            const postHazard = (post.dataset.hazard || "").toLowerCase();

            const matchPriority = priority === "all" || postPriority === priority;
            const matchHazard = hazard === "all" || postHazard === hazard;

            post.style.display = matchPriority && matchHazard ? "flex" : "none";
        });
    }
    
        function sortReports() {
        const sortValue = document.getElementById("sortFilter").value;
        const feed = document.getElementById("reportsFeed");
        const posts = Array.from(feed.querySelectorAll(".report-post"));

        posts.sort((a, b) => {
            const dateA = new Date(a.querySelector(".submitted-date").textContent);
            const dateB = new Date(b.querySelector(".submitted-date").textContent);

            const priorityOrder = { "Urgent": 4, "High": 3, "Moderate": 2, "Low": 1 };

            switch (sortValue) {
                case "newest":
                    return dateB - dateA;
                case "oldest":
                    return dateA - dateB;
                case "priority-high":
                    return priorityOrder[b.dataset.priority] - priorityOrder[a.dataset.priority];
                case "priority-low":
                    return priorityOrder[a.dataset.priority] - priorityOrder[b.dataset.priority];
            }
        });

        posts.forEach(post => feed.appendChild(post)); // re-append in new order
    }
</script>
</body>
</html>
